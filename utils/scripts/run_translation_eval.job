#!/bin/bash

#SBATCH --partition=gpu
#SBATCH --gpus=1
#SBATCH --job-name=RunTranslationEval
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=18
#SBATCH --time=04:00:00
#SBATCH --output=/home/scur1769/ALMA-Matters/utils/script_outputs/RunTranslationEval_%A.out

module purge
module load 2022
module load Anaconda3/2022.05

source activate DL4_env

python -uc "import torch; print('GPU available?', torch.cuda.is_available())"

cd $HOME/ALMA-Matters/

python evaluation/translation_eval2.py \
--model "haoranxu/ALMA-7B" \
--sliced-model-path $HOME/ALMA-Matters/models \
--sparsity 0.25 \
--no-wandb \
--save-dir $HOME/ALMA-Matters/evaluation/results \
--data_dir $HOME/ALMA-Matters/datasets/human-translations \
--beam 5 \
--dtype float16