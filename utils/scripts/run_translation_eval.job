# NOTE: TO RUN ALL TRANSLATIONS IN ONE GO, USE THIS
for json_file in $HOME/ALMA-Matters/datasets/human-translations/*.json
do
  echo "Processing file: $json_file"
  python evaluation/translation_eval2.py \
    --model "haoranxu/ALMA-7B" \
    --sliced-model-path $HOME/ALMA-Matters/models \
    --sparsity 0.25 \
    --save-dir $HOME/ALMA-Matters/evaluation/results \
    --json-file $json_file \
    --beam 5 \
    --dtype float16
done
