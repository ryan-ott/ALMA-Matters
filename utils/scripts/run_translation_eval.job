#!/bin/bash

#SBATCH --partition=gpu
#SBATCH --gpus=1
#SBATCH --job-name=RunTranslationEval
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=18
#SBATCH --time=04:00:00
#SBATCH --output=/home/scur1769/ALMA-Matters/utils/script_outputs/RunTranslationEval_%A.out

module purge
module load 2022
module load Anaconda3/2022.05

source activate DL4_env

python -uc "import torch; print('GPU available?', torch.cuda.is_available())"

cd $HOME/ALMA-Matters/

echo "+++Directory: $(pwd)"

python evaluation/translation_eval2.py \
    --data_dir $HOME/ALMA-Matters/data/datasets/human-translations \
    --results_dir $HOME/ALMA-Matters/evaluation/results \
    --sliced_model_path $HOME/ALMA-Matters/models \
    --model_name "ALMA-7B" \
    --sparsity 0.25 \
    --beam 5 \
    --gen_max_tokens 256 \
    --batch_size 8 \
    --dtype float16